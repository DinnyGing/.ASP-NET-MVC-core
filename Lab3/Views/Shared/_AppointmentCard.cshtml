@using Lab3.ViewModel
@model AppointmentView
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@using System.Globalization

<div class="col-lg-3 col-md-6 pb-4">
    <div class="two">
			<div class="px-3 pt-3">
				<h3 class="name">@Model.ProcedureName</h3>
				<p class="quote2">Master: @Model.MasterFirstName @Model.MasterLastName</p>
				<p class="quote2">Client: @Model.ClientFirstName @Model.ClientLastName</p>
			</div>
			<div class="d-flex justify-content-between  px-3 align-items-center pb-3">
				<i>UAH</i>
				<span class="quote2 pl-2">Price: @Model.ProcedurePrice</span>
			</div>
			<div class="d-flex justify-content-between  px-3 align-items-center pb-3">
				<i>📆</i>
				<span class="quote2 pl-2">Date: @Model.Date</span>
			</div>
			<div class="d-flex justify-content-between  px-3 align-items-center pb-3">
				<i>⌚</i>
				<span class="quote2 pl-2">Time: @Model.Time</span>
			</div>
			<div class="d-flex justify-content-between  px-3 align-items-center pb-3">
				<i>⌛</i>
				<span class="quote2 pl-2">Duration: @Model.Duration</span>
			</div>
			
			<div class="d-flex justify-content-around m-2">
				<div class="d-flex justify-content-around mb-2">
					<form asp-action="Edit" asp-route-id="@Model.AppointmentID" method="post">
						<button type="submit" class="btn btn-outline-primary me-1 flex-grow-1">
							Edit 						</button>
					</form>
					<form asp-action="Delete" asp-route-id="@Model.AppointmentID" method="post">
						<button type="submit" class="btn btn-outline-primary me-1 flex-grow-1">
							Delete 
						</button>
					</form>
				</div>
			</div>
			
		</div>
</div>