@using Lab3.ViewModel
@model MasterView
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor


<div class="col-lg-4 col-md-6 pb-4">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@Model.FirstName @Model.LastName</h5>
            <p class="card-text">Gender: @Model.Gender</p>
            <p class="card-text">Age: @Model.Age</p>
            <p class="card-text">Phone: @Model.Phone</p>
            <p class="card-text">Level: @Model.Level</p>
            <p class="card-text">Age in Category: @Model.AgeInCategory</p>
            <p class="card-text">Category Name: @Model.CategoryName</p>
            @if (HttpContextAccessor.HttpContext.Session.GetString("Role") != "client")
            {
                <div class="text-center">
                    @Html.ActionLink("Edit", "Edit", new { id = Model.MasterID }, new { @class = "btn btn-secondary btn-block" })
                        <br />
                    @Html.ActionLink("Delete", "Delete", new { id = Model.MasterID }, new { @class = "btn btn-danger" })
                </div>
            }
        </div>

    </div>
</div>