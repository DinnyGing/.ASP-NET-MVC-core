@using Lab3.Models
@model User


<section class="vh-100">
    <div class="container py-5 h-100">

        <div class="row d-flex align-items-center justify-content-center">
        <!-- Pills navs -->
        <ul class="nav w-50 nav-pills nav-justified mb-3" id="ex1" role="tablist">
            <li class="nav-item" role="presentation">
                    <a class="nav-link active" id="tab-login" data-mdb-toggle="pill" asp-action="LogIn" role="tab"
                   aria-controls="pills-login" aria-selected="true">Login</a>
            </li>
            <li class="nav-item" role="presentation">
                    <a class="nav-link" id="tab-register" data-mdb-toggle="pill" asp-action="Register" role="tab"
                   aria-controls="pills-register" aria-selected="false">Register</a>
            </li>
        </ul>
        <!-- Pills navs -->
        </div>
        <div class="row d-flex align-items-center justify-content-center h-100">
            <div class="col-md-8 col-lg-7 col-xl-6">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
                     class="img-fluid" alt="Phone image">
            </div>
            <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">

                <form asp-action="LogIn">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <!-- Email input -->
                    <div class="form-outline mb-4">
                        <div class="form-floating mb-3">
                            <span asp-validation-for="UserName" class="text-danger"></span>
                            <input asp-for="UserName" type="text" id="userName" class="form-control form-control-lg" placeholder="User Name" />
                            <label asp-for="UserName" class="form-label" for="form1Example13">User Name</label>
                        </div>
                        
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-4">
                        <div class="form-floating mb-3">
                            <input asp-for="Password" type="password" id="password" class="form-control form-control-lg" placeholder="Password" />
                            <label asp-for="Password" class="form-label" for="password">Password</label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        
                    </div>

                    <div class="d-flex justify-content-around align-items-center mb-4">
                        <!-- Checkbox -->
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="form1Example3" checked />
                            <label class="form-check-label" for="form1Example3"> Remember me </label>
                        </div>
                        <a href="#!">Forgot password?</a>
                    </div>

                    <!-- Submit button -->
                    <button type="submit" class="btn w-100 btn-primary btn-lg btn-block">Sign in</button>
                    <p class="small fw-bold mt-2 pt-1 mb-0">
                        Don't have an account? <a asp-action="Register"
                                                  class="link-danger">Register</a>
                    </p>

                    <div class="divider d-flex align-items-center my-4">
                        <p class="text-center fw-bold mx-3 mb-0 text-muted">OR</p>
                    </div>

                    <a class="btn btn-primary btn-lg btn-block" style="background-color: #3b5998" href="#!"
                       role="button">
                        <i class="fab fa-facebook-f me-2"></i>Continue with Facebook
                    </a>
                    <a class="btn btn-primary btn-lg btn-block" style="background-color: #55acee" href="#!"
                       role="button">
                        <i class="fab fa-twitter me-2"></i>Continue with Twitter
                    </a>

                </form>
            </div>
        </div>
    </div>
</section>
