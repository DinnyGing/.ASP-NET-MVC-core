@using Lab3.Models
@using Lab3.ViewModel
@model ProcedureView
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<h4>Procedure Form</h4>
<hr />
<div class="col-md-6">
    <form asp-action="EditOrCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProcedureID" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            @if (HttpContextAccessor.HttpContext.Session.GetString("Role") != "master")
            {
                <div class="form-group">
                    <label asp-for="CategoryName" class="control-label"></label>
                    <select asp-for="CategoryName" name="CategoryName">
                        @foreach (var c in ViewBag.Categories)
                        {
                            <option value="@c.Name">@c.Name</option>
                        }
                    </select>
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
            }
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" min="0" type="number"/>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        <div class="form-row">
            <br />
            <div class="form-group col-md-6">
                <input type="submit" value="Submit" class="btn btn-secondary btn-block" />
            </div>
            <br />
            <div class="form-group col-md-6">
                <a asp-action="Index" class="btn btn-secondary btn-block"><i class="fa fa-table"></i> Back to All Clients</a>
            </div>
        </div>
    </form>
</div>